<div class="container">
  <div class="p-5 justify-content-center">
    <form  action="/dinners/{{ dinner._id }}/edit" method="POST">
      <h2 class="text-center mb-4">編輯餐廳資料</h2>
      <div class="form-group row">
        <label class="col-sm-3 col-form-label">餐廳中文名稱</label>
        <div class="col-sm-9">
          <input class="form-control" type="text" name="name" placeholder="餐廳中文名稱" value="{{ dinner.name }}" >
        </div>
      </div>
      
      <div class="form-group row">
        <label class="col-sm-3 col-form-label">餐廳英文名稱</label>
        <div class="col-sm-9">
        <input class="form-control" type="text" name="name_en" placeholder="input restaurant English name" value="{{ dinner.name_en }}">
        </div>
      </div>

      <div class="form-group row">
        <label class="col-sm-3 col-form-label">餐廳類別</label>
        <div class="col-sm-9">
        <input class="form-control" type="text" name="category" placeholder="input category" value="{{ dinner.category }}"></div>
      </div>

      <div class="form-group row">
        <label class="col-sm-3 col-form-label">餐廳照片</label>
        <div class="col-sm-9">
        <input class="form-control" type="text" name="image" value="{{ dinner.image }}">
      </div>
      </div>

      <div class="form-group row">
        <label class="col-sm-3 col-form-label">餐廳位置</label>
        <div class="col-sm-9">
        <input class="form-control" type="text" name="location" placeholder="input location" value="{{ dinner.location }}"></div>
      </div>

      <div class="form-group row">
        <label class="col-sm-3 col-form-label">電話</label>
        <div class="col-sm-9">
        <input class="form-control" type="text" name="phone" placeholder="input phone" value="{{ dinner.phone }}"></div>
      </div>

      <div class="form-group row">
        <label class="col-sm-3 col-form-label">Google Map</label>
        <div class="col-sm-9">
        <input class="form-control" type="text" name="google_map" placeholder="google_map" value="{{ dinner.google_map }}"></div>
      </div>

      <div class="form-group row">
        <label class="col-sm-3 col-form-label">評分</label>
        <div class="col-sm-9">
        <input class="form-control" type="number" name="rating" placeholder="0~5" step="0.1" min="0" max="5" value="{{ dinner.rating }}"></div>
      </div>

      <div class="form-group row">
        <label class="col-sm-3 col-form-label">介紹</label>
        <div class="col-sm-9">
        <input class="form-control" type="text" name="description" placeholder="input description" value="{{ dinner.description }}"></div>
      </div>

      <button type="submit" class="btn btn-secondary btn-lg btn-block">提交</button>
      <a href="/" type="button" class="btn btn-info btn-lg btn-block">返回首頁</a>
    </form>
    
  </div>
</div>
