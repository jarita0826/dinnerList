<div class="container">
  <div class="p-5 justify-content-center">
    <form action="/dinners" method="POST">
    <h2 class="text-center mb-4">新增餐廳資料</h2>

    <div class="form-group row">
      <label class="col-sm-3 col-form-label">餐廳中文名稱</label>
      <div class="col-sm-9">
        <input class="form-control" type="text" name="name" placeholder="餐廳中文名稱">
      </div>
    </div>

    <div class="form-group row">
      <label class="col-sm-3 col-form-label">餐廳英文名稱</label>
      <div class="col-sm-9">
          <input class="form-control" type="text" name="name_en" placeholder="input restaurant English name">
      </div>
    </div>

    <div class="form-group row">
      <label class="col-sm-3 col-form-label">餐廳類別</label>
      <div class="col-sm-9">
        <input class="form-control" type="text" name="category" placeholder="input category" >
      </div>
    </div>
      
    <div class="form-group row">
      <label class="col-sm-3 col-form-label">餐廳照片</label>
      <div class="col-sm-9">
        <input class="form-control" type="text" name="image">
      </div>
    </div>
      
    <div class="form-group row">
      <label class="col-sm-3 col-form-label">餐廳位置</label>
      <div class="col-sm-9">
        <input class="form-control" type="text" name="location" placeholder="input location">
      </div>
    </div>

    <div class="form-group row">
      <label class="col-sm-3 col-form-label">電話</label>
      <div class="col-sm-9">
        <input class="form-control" type="text" name="phone" placeholder="input phone" >
      </div>
    </div>

    <div class="form-group row">
      <label class="col-sm-3 col-form-label">Google Map</label>
      <div class="col-sm-9">
        <input class="form-control" type="text" name="google_map" placeholder="google_map" >
      </div>
    </div>

    <div class="form-group row">
      <label class="col-sm-3 col-form-label">評分</label>
      <div class="col-sm-9">
        <input class="form-control" type="number" name="rating" placeholder="0~5" step="0.1" min="0" max="5" >
      </div>
    </div>

    <div class="form-group row">
      <label class="col-sm-3 col-form-label">介紹</label>
      <div class="col-sm-9">
         <input class="form-control" type="text" name="description" placeholder="input description">
      </div>
    </div>

      <button class="btn btn-secondary btn-lg btn-block" type="submit">新增</button>
    </form>
  </div>
</div>