
<h1 class="mb-1 restaurant-show-title">{{dinner.name}}</h1>
<div class="container">
  <div class="row">
    <div class="col-12 col-md-10 mx-auto">

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-concierge-bell"></i>
          類別：
        </span>
        {{dinner.category}}
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-home"></i>
          地址：
        </span>
        {{dinner.location}}
        <a href="{{dinner.google_map}}" class="text-secondary" target="_blank">
          <i class="fas fa-map-marker-alt"></i>
        </a>
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-phone-alt"></i>
          電話：
        </span>
        {{dinner.phone}}
      </p>

      <p class="mb-5">{{dinner.description}}</p>

      <img class="rounded mx-auto d-block mb-4 w-100"
        src="{{dinner.image}}" alt="{{dinner.name}}"
        style="max-width: 600px;">

      <p class="mb-1">
        <span class="text-secondary">
          <a class="back" type="button" onclick="history.back()" value="回到上一頁" target="_blank">
          <i class="fas fa-angle-double-left"></i>
          回上一頁
          </a>
        </span>
        <a href="./dinners/{{ this._id }}/edit">edit</a>
      </p>
    </div>
  </div>
</div>

<a href="/">back</a>