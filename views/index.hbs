
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group">
          <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳" aria-label="Restaurant Name..."
            aria-describedby="search-button" value="{{keyword}}">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"style="background-color: #C8AE70; color: white;"><i class="fas fa-utensils"></i></button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
<!-- search bar -->

<div class="container mt-5">
  <div class="row">
    <div class="alert alert-secondary col-md-10 col-12 mx-auto" role="alert">
      <a href="./dinners/new">新增餐廳</a>
    </div>
   
    <div class="col-md-10 col-12 mx-auto">
      <div class="card-columns">
        {{#each dinners}}
        <a href="./dinners/{{ this._id }}" class="text-secondary">
          <div class="card mb-3">
            {{!-- 餐廳照片 --}}
            <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
            <div class="card-body p-3">
              {{!-- 餐廳名字 --}}
              <h6 class="card-title mb-1">{{this.name}}</h6>
              {{!-- 餐廳類型 --}}
              <div class="restaurant-category mb-1">
                <i class="fas fa-utensil-spoon"></i> {{this.category}}
              </div>
              {{!-- 餐廳分數 --}}
              <span class="badge badge-pill badge-danger font-weight-normal mb-2">
                {{this.rating}}
                <i class="fas fa-star"></i>
              </span>
              <div class="text-right">
                <a  type="button" class="btn btn-outline-secondary btn-sm" href="./dinners/{{ this._id }}/edit">編輯</a>
                <form action="./dinners/{{ this._id }}/delete" method="POST" style="display: inline;">
                  <button type="submit" class="btn btn-outline-warning btn-sm">刪除</button>
                </form>
              </div>
            </div>
           
          </div>
          
        </a>
        
        {{/each}}
        
      </div>
      
    </div>
  </div>
</div>